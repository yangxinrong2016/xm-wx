<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<appender name="myConsole" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss,SSS} %5p  %c{2} - %m%n" />
			<param name="ConversionPattern" value="%m%n" />
		</layout>
	</appender>
	<appender name="fileAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/search/odin/resin_p2p/log/weixin/weixin.log" />
		<param name="DatePattern" value="'.'yyyy-MM-dd" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss,SSS} %5p  %c{2} - %m%n" />
		</layout>
	</appender>
	<appender name="fileAppender4SendMsg" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/search/odin/resin_p2p/log/weixin/sendMsg.log" />
		<param name="DatePattern" value="'.'yyyy-MM-dd" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss,SSS} %5p  - %m%n" />
		</layout>
	</appender>
	<!-- Root Logger -->
	<category name="com.imxiaomai.wxplatform" additivity="false">
		<priority value="error"/>
		<appender-ref ref="fileAppender" />
	</category>
	<root>
		<level value="error" />
		<appender-ref ref="fileAppender" />
	</root>
	
	 <logger name="infoLog" additivity="false">
       <priority value="info"/>
		<appender-ref ref="fileAppender4SendMsg" />
    </logger>
</log4j:configuration>
